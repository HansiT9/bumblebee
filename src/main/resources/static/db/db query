show databases

create database bumblebee

use bumblebee

CREATE TABLE admin (
    id INT AUTO_INCREMENT PRIMARY KEY,
    email VARCHAR(255) NOT NULL UNIQUE,
    password VARCHAR(255) NOT NULL
);

CREATE TABLE customer (
    id INT PRIMARY KEY AUTO_INCREMENT,
    full_name VARCHAR(255) NOT NULL,
    dob varchar(10) NOT NULL,
    email VARCHAR(255) UNIQUE NOT NULL,
    password VARCHAR(255) NOT NULL,
    loan_balance DECIMAL(10,2) DEFAULT 0,
    used_amount DECIMAL(10,2) DEFAULT 0,
    installment_plan VARCHAR(255) DEFAULT NULL
);

CREATE TABLE brands (
  id INT PRIMARY KEY AUTO_INCREMENT,
  brand_name VARCHAR(255) NOT NULL UNIQUE,
  brand_logo VARCHAR(255) NOT NULL
);

CREATE TABLE categories (
  id INT PRIMARY KEY AUTO_INCREMENT,
  category_name VARCHAR(255) NOT NULL UNIQUE,
  category_logo VARCHAR(255) NOT NULL
);

CREATE TABLE product (
  id INT NOT NULL AUTO_INCREMENT PRIMARY KEY,
  product_name VARCHAR(255),
  product_url VARCHAR(255),
  product_brand_name VARCHAR(255),
  product_category_name VARCHAR(255),
  product_qty INT,
  CONSTRAINT FK_Product_Brand FOREIGN KEY (product_brand_name) REFERENCES brands (brand_name),
  CONSTRAINT FK_Product_Category FOREIGN KEY (product_category_name) REFERENCES categories (category_name)
);
